# prevent skhd from monitoring events for specific applications.
.blacklist [
   "1Password"
]

# ------------------------------
# Yabai

# Move window
alt + ctrl + shift - h : yabai -m window --swap west
alt + ctrl + shift - j : yabai -m window --swap south
alt + ctrl + shift - k : yabai -m window --swap north
alt + ctrl + shift - l : yabai -m window --swap east

# Move focus
ctrl + shift - h : yabai -m window --focus west
ctrl + shift - j : yabai -m window --focus south
ctrl + shift - k : yabai -m window --focus north
ctrl + shift - l : yabai -m window --focus east

# Flip spaces
ctrl + shift - x : yabai -m space --mirror x-axis
ctrl + shift - y : yabai -m space --mirror y-axis

# Zoom to window size
ctrl + shift - z : yabai -m window --toggle zoom-fullscreen

# Rotate space
alt + ctrl + shift - r : yabai -m space --rotate 90

# Balance space
ctrl + shift - b : yabai -m space --balance

# Move spaces
ctrl + shift - 1 : yabai -m window --space 1 --focus
ctrl + shift - 2 : yabai -m window --space 2 --focus
ctrl + shift - 3 : yabai -m window --space 3 --focus
ctrl + shift - 4 : yabai -m window --space 4 --focus

# Toggle float
ctrl + shift - t : yabai -m window --toggle float

# Resizing windows
# TODO: could be done with a function maybe? That's querying the position and if it's e.g. on top it'll resize the bottom and vice versa...
alt + ctrl + shift - y : yabai -m window --resize left:-15:0
alt + ctrl + shift - u : yabai -m window --resize bottom:0:15
alt + ctrl + shift - i : yabai -m window --resize top:0:-15
alt + ctrl + shift - o : yabai -m window --resize right:15:0
